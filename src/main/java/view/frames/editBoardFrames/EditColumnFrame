package view.frames.editBoardFrames;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class EditColumnFrame extends AddColumnFrame implements ActionListener{

  private String newName = "";
  private JTextField  newColName;

  public EditColumnFrame(String name){
    newName = name;
    super(newName);
  }

  public void actionPerformed(ActionEvent e){
    //JTextField  newColName = getTextComponent(e);
    newColName = new JLabel("Enter new title:");
    newColName.setEditable(true);
    if((newColName.getText() != null)){
      newName = newColName.getText(); 
    }
    else{
      newName = "Unnamed Column";
    }
  }
}
